<div class="row">
  <div class="col-md-offset-2 col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>Choose a verse to Memorize</h3>
      </div>
      <div class="panel-body">
        <%= simple_form_for @first, url: "/firsts", html: {role: 'form', class: 'form-horizontal'}  do |f| %>
          <%= f.input :book, collection: @books %>
          <%= f.input :chapter %>
          <%= f.input :verse %>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
